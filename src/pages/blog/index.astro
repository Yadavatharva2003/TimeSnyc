---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import AdSlot from '../../components/AdSlot.astro';

const blogs = [
  {
    title: "How to Plan Meetings Across Different Time Zones Without Confusion",
    desc: "A practical guide to scheduling meetings across countries using smart time planning techniques.",
    slug: "how-to-plan-meetings-across-time-zones"
  },
  {
    title: "Best Time Zone Converter for Accurate DST-Aware Time Conversion",
    desc: "Learn why DST-aware time conversion matters and how to avoid common timezone mistakes.",
    slug: "best-time-zone-converter-dst-aware"
  },
  {
    title: "How to Find Overlapping Work Hours for Remote Teams",
    desc: "Discover the easiest way to identify shared working hours for global teams.",
    slug: "overlapping-work-hours-remote-teams"
  },
  {
    title: "World Clock for Professionals: Track Multiple Time Zones Accurately",
    desc: "Why a professional world clock with DST and work-hour indicators beats basic clocks.",
    slug: "world-clock-for-professionals"
  },
  {
    title: "Daylight Saving Time Explained: How to Check DST Changes by Country",
    desc: "Everything you need to know about daylight saving time and how to track changes globally.",
    slug: "daylight-saving-time-explained"
  },
  {
    title: "How to Instantly Check Current Time in Any Country or City",
    desc: "A simple, accurate way to find the current local time anywhere in the world.",
    slug: "current-time-by-country-city"
  },
  {
    title: "Why Scheduling Meetings Across Time Zones Is So Difficult",
    desc: "Common timezone problems teams face — and how modern tools solve them.",
    slug: "why-timezone-meetings-are-hard
"
  },
  {
    title: "What Is the Time Difference Between Countries and How Is It Calculated",
    desc: "Understand UTC offsets, time differences, and why they change throughout the year.",
    slug: "time-difference-between-countries"
  }
];
---
<html lang="en">
  <head>
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/assets/img/favicon.svg" type="image/svg+xml">
    <meta name="theme-color" content="#000000">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>Time Zone & World Time Blog — TimeSync</title>
    <meta
      name="description"
      content="Guides and articles on time zones, world clocks, daylight saving time, and global meeting planning."
    />

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/src/styles/style.css" />
  </head>

  <body>
    <Header />
   <!-- Ad -->
          <div class="post-card ad-card">
            <AdSlot slot="4567890123" />
          </div>
    <main class="container">
      <!-- Hero -->
      <section class="section">
        <h1>TimeSync Blog</h1>
        <p class="muted">
          Practical guides on time zones, daylight saving time, global meetings,
          and world time management.
        </p>
      </section>

      <!-- Blog Grid -->
      <section class="section">
        <div class="blog-grid">
          {blogs.map((blog) => (
            <article class="post-card">
              <h3>
                <a href={`/blog/${blog.slug}/`}>{blog.title}</a>
              </h3>
              <p>{blog.desc}</p>
            </article>
          ))}

         
        </div>
        
      </section>
    </main>
     <!-- Ad -->
          <div class="post-card ad-card">
            <AdSlot slot="4567890123" />
          </div>
    <Footer />
  </body>
</html>
